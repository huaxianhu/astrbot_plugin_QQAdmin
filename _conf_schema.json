{
  "join_config": {
    "description": "进群退群模块配置",
    "hint": "",
    "type": "object",
    "items": {
      "default_switch": {
        "description": "默认是否启用进群审核",
        "hint": "开启后，进群退群模块的功能才会在当前群聊生效，群主、群管理可用命令 “进群审核 开/关” 为当前群聊设置",
        "type": "bool",
        "default": false
      },
      "default_min_level": {
        "description": "默认进群等级门槛",
        "hint": "当申请人的QQ等级低于此值时，自动拒绝进群申请。设为0表示不启用此功能。可通过群内命令为当前群聊设置",
        "type": "int",
        "default": 0
      },
      "default_max_time": {
        "description": "默认进群最大尝试次数",
        "hint": "当用户申请进行的次数超过此值时，自动拒绝进群申请。可通过群内命令为当前群聊设置",
        "type": "int",
        "default": 3
      },
      "no_match_reject": {
        "description": "未命中白词时自动驳回",
        "hint": "当用户申请加群时，没命中进群关键词，则自动驳回申请，而不是交给管理员处理",
        "type": "bool",
        "default": false
      },
      "admin_audit": {
        "description": "进群事件仅通知bot管理员",
        "hint": "如果开启，则进群事件仅通知bot管理员，不再将通知发送在对应群聊",
        "type": "bool",
        "default": false
      },
      "ban_time": {
        "description": "进群禁言时长",
        "hint": "单位为秒，新成员进群时，自动禁言该成员",
        "type": "int",
        "default": 0
      },
      "welcome_template": {
        "description": "进群欢迎词",
        "hint": "发给新群友的欢迎词, 支持变量: {nickname}, 示例：欢迎{nickname}加入群聊",
        "type": "string",
        "default": ""
      },
      "leave_notify": {
        "description": "启用主动退群通知",
        "hint": "当用户主动退群时，向群内通报",
        "type": "bool",
        "default": false
      },
      "leave_block": {
        "description": "主动退群自动拉黑",
        "hint": "当用户主动退群时，自动拉黑（即添加到进群黑名单）",
        "type": "bool",
        "default": false
      }
    }
  },
  "random_ban_time": {
    "description": "随机禁言配置",
    "hint": "若禁言命令未指定禁言时长，则使用随机时长，时长范围如下，单位为秒，用~表示范围",
    "type": "string",
    "default": "30~300"
  },
  "ban_words_time": {
    "description": "违禁词禁言时长",
    "hint": "触发违禁词则禁言发送者，单位：秒，设置为0表示不禁言",
    "type": "int",
    "default": 60
  },
  "spamming": {
    "description": "刷屏禁言配置",
    "hint": "用于自动检测群成员连续发言是否构成刷屏行为，并执行禁言操作",
    "type": "object",
    "items": {
      "whitelist": {
        "description": "刷屏检测群聊白名单",
        "hint": "仅在这些群里启用刷屏检测，留空则关闭刷屏检测（注意老版本是留空则全部群聊启用，根据用户反馈体验极差，故作更改）",
        "type": "list",
        "default": []
      },
      "count": {
        "description": "刷屏判断的消息数量阈值",
        "hint": "当用户在短时间内连续发送至少该数量的消息时，触发刷屏检测, 填0表示不启用刷屏检测",
        "type": "int",
        "default": 0
      },
      "interval": {
        "description": "连续消息的最大允许间隔",
        "hint": "单位：秒；若连续消息之间的时间间隔都小于该值，则视为刷屏",
        "type": "float",
        "default": 0.5
      },
      "ban_time": {
        "description": "刷屏后的禁言时长",
        "hint": "单位：秒",
        "type": "int",
        "default": 600
      }
    }
  },
  "vote_ban": {
    "description": "投票禁言配置",
    "hint": "用于投票禁言",
    "type": "object",
    "items": {
      "ttl": {
        "description": "投票时长（秒）",
        "hint": "每轮投票时长到达此值时，开始结算，赞同票多于反对票时，禁言生效",
        "type": "int",
        "default": 120
      },
      "threshold": {
        "description": "投票通过所需票数",
        "hint": "赞同禁言的投票数到达此值时，禁言直接生效",
        "type": "int",
        "default": 3
      }
    }
  },
  "level_threshold": {
    "description": "高等级成员阈值设置",
    "hint": "群等级高于此阈值的群成员，将被判定为“高等级成员”",
    "type": "int",
    "default": 50
  },
