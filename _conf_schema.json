{
  "divided_manage":{
    "description":"分群管理",
    "type":"object",
    "hint":"开启后，每个群拥有一份配置，面板上设定的默认值仅作为初始值，每个群可在群内用命令单独修改。若关闭分群管理，则重载插件时将所有群的配置恢复成同样的默认值",
    "default": true
  },
  "default": {
    "description": "默认值配置",
    "hint": "注意：以下配置项均为默认值，在群内调用过一次后会写入数据库，此时该群的此项配置只能用命令修改, 设计宗旨是为了实现分群管理",
    "type": "object",
    "items": {
      "join_switch": {
        "description": "进群审核",
        "hint": "开启后，进群退群模块的功能才会在当前群聊生效，群主、群管理可用命令 “进群审核 开/关” 为当前群聊设置",
        "type": "bool",
        "default": false
      },
      "join_min_level": {
        "description": "进群等级门槛",
        "hint": "当申请人的QQ等级低于此值时，自动拒绝进群申请。设为0表示不启用此功能。可通过群内命令为当前群聊设置",
        "type": "int",
        "default": 8
      },
      "join_max_time": {
        "description": "进群最大尝试次数",
        "hint": "当用户申请进行的次数超过此值时，自动拒绝进群申请。可通过群内命令为当前群聊设置",
        "type": "int",
        "default": 3
      },
      "join_accept_words": {
        "description": "进群白词",
        "hint": "用户申请加群时, 若进群答案中包含这些关键词，则自动通过申请",
        "type": "list",
        "default": [
          "白词1",
          "白词2"
        ]
      },
      "join_reject_words": {
        "description": "进群黑词",
        "hint": "用户申请加群时, 若进群答案中包含这些关键词，则自动拒绝申请",
        "type": "list",
        "default": [
          "黑词1",
          "黑词2"
        ]
      },
      "join_no_match_reject": {
        "description": "自动拒绝未命中白词的进群申请",
        "hint": "当用户申请加群时，没命中进群关键词，则自动驳回申请",
        "type": "bool",
        "default": false
      },
      "reject_word_block": {
        "description": "命中进群黑词自动拉黑",
        "hint": "当用户因触发进群黑词而被拒绝进群时，自动拉黑该用户",
        "type": "bool",
        "default": false
      },
      "block_ids": {
        "description": "进群黑名单",
        "hint": "用户加入群聊时，若用户QQ在黑名单中，则自动拒绝",
        "type": "list",
        "default": []
      },
      "join_welcome": {
        "description": "进群欢迎词",
        "hint": "发给新群友的欢迎词, 支持变量: {nickname}, 示例：欢迎{nickname}加入群聊",
        "type": "string",
        "default": ""
      },
      "join_ban_time": {
        "description": "进群禁言时长",
        "hint": "单位为秒，新成员进群时，自动禁言该成员",
        "type": "int",
        "default": 0
      },
      "leave_notify": {
        "description": "主动退群通知",
        "hint": "当用户主动退群时，向群内通报",
        "type": "bool",
        "default": false
      },
      "leave_block": {
        "description": "主动退群拉黑",
        "hint": "当用户主动退群时，自动拉黑（即添加到进群黑名单）",
        "type": "bool",
        "default": false
      },
      "builtin_ban": {
        "description": "启用内置禁词",
        "hint": "插件内置了一个敏感词库, 如需自定义请自行修改：data/plugins/astrbot_plugin_qqadmin/SensitiveLexicon.json, 不建议开启，让群管理员通过命令“ 内置禁词 开/关 ”来为当前群聊设置",
        "type": "bool",
        "default": false
      },
      "custom_ban_words": {
        "description": "群内自定义的违禁词",
        "hint": "",
        "type": "list",
        "default": [
          "禁词1",
          "禁词2"
        ]
      },
      "word_ban_time": {
        "description": "触发禁词时的禁言时长",
        "hint": "触发违禁词则禁言发送者，单位：秒，设置为 0 表示不禁言",
        "type": "int",
        "default": 300
      },
      "spamming_ban_time": {
        "description": "刷屏禁言时长（秒）",
        "hint": "当用户刷屏时触发禁言该用户，设置为 0 表示不启用此功能",
        "type": "int",
        "default": 0
      }
    }
  },
  "admin_audit": {
    "description": "进群事件仅通知bot管理员",
    "hint": "如果开启，则进群事件仅通知bot管理员，不再将通知发送在对应群聊",
    "type": "bool",
    "default": false
  },
  "random_ban_time": {
    "description": "随机禁言配置",
    "hint": "若禁言命令未指定禁言时长，则使用随机时长，时长范围如下，单位为秒，用~表示范围",
    "type": "string",
    "default": "30~300"
  },
  "vote_ban": {
    "description": "投票禁言配置",
    "hint": "用于投票禁言",
    "type": "object",
    "items": {
      "ttl": {
        "description": "投票时长（秒）",
        "hint": "每轮投票时长到达此值时，开始结算，赞同票多于反对票时，禁言生效",
        "type": "int",
        "default": 120
      },
      "threshold": {
        "description": "投票通过所需票数",
        "hint": "赞同禁言的投票数到达此值时，禁言直接生效",
        "type": "int",
        "default": 3
      }
    }
  },
  "llm_get_msg_count": {
    "description": "取名指令获取消息的默认轮数",
    "hint": "取名指令会爬取群聊的聊天记录进行分析，每轮爬200条消息，默认爬轮数10轮， 轮数可调",
    "type": "int",
    "default": 10
  },
  "level_threshold": {
    "description": "高等级成员阈值设置",
    "hint": "群等级高于此阈值的群成员，将被判定为“高等级成员”",
    "type": "int",
    "default": 50
  },
